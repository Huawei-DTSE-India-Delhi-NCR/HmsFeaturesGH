<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/basic_scan"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Basic Scan"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="basicScanDemo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/custom_scan"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Custom Scan"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basic_scan"
        android:onClick="customScanDemo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bitmap_scan"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Bitmap Scan"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_scan"
        android:onClick="bitmapScanDemo"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/multiprocessor_scan"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Multi Processor"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitmap_scan"
        android:onClick="multScanDemo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/generate_scan"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Generate Qr Codes"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/multiprocessor_scan"
        android:onClick="generateScanDemo"/>






</androidx.constraintlayout.widget.ConstraintLayout>