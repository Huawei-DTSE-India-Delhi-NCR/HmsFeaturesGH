<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_pr_load_get_info"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Load Image Get Info"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:onClick="loadImageGetDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_pr_load_get_info_type"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Load Image Get Info Without Type"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:onClick="loadImageWithoutType"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pr_load_get_info"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_pr_local_interface"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Local Interface"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:onClick="loadImageLocalInterface"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pr_load_get_info_type"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_pr_video"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Panoramic Video"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:onClick="videoPanoramic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pr_local_interface"/>


</androidx.constraintlayout.widget.ConstraintLayout>