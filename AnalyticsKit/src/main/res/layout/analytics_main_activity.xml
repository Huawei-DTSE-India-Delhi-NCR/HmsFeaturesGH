<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/btn_auto_collect"
      android:orientation="vertical"
      android:layout_width="350dp"
      android:layout_height="60dp"
      android:textSize="16sp"
      android:textColor="@color/white"
      android:text="Automatically Collected Events"
      android:gravity="center"
      android:layout_gravity="center"
      android:textStyle="bold"
      android:lines="1"
      android:letterSpacing="0.1"
      android:background="@drawable/custom_btn"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:layout_marginTop="20dp"
      android:onClick="userEvents"/>

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/btn_preset"
      android:orientation="vertical"
      android:layout_width="350dp"
      android:layout_height="60dp"
      android:textSize="16sp"
      android:textColor="@color/white"
      android:text="Preset Events"
      android:gravity="center"
      android:layout_gravity="center"
      android:textStyle="bold"
      android:lines="1"
      android:letterSpacing="0.1"
      android:background="@drawable/custom_btn"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:layout_marginTop="20dp"
      android:onClick="preDefinedEvent"/>

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/btn_custom"
      android:orientation="vertical"
      android:layout_width="350dp"
      android:layout_height="60dp"
      android:textSize="16sp"
      android:textColor="@color/white"
      android:text="Custom Events"
      android:gravity="center"
      android:layout_gravity="center"
      android:textStyle="bold"
      android:lines="1"
      android:letterSpacing="0.1"
      android:background="@drawable/custom_btn"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:layout_marginTop="20dp"
      android:onClick="sendCustomEvent"/>








</LinearLayout>