<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/rect_dash_border"
        android:text="Please click login \n enjoy the delight experience"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="14sp"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/basic_agc"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Basic AGC Login"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/qr_sign_in"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="QR Sign In"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/basic_agc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quick_sign_in"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Silent Sign In"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/qr_sign_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone_sign_in"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Phone Sign In"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/quick_sign_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sign_out"
                android:orientation="vertical"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="Sign Out"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:lines="1"
                android:letterSpacing="0.1"
                android:background="@drawable/custom_btn"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/phone_sign_in"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sign_revoke"
                android:orientation="vertical"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="Revoke Signin"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:lines="1"
                android:letterSpacing="0.1"
                android:background="@drawable/custom_btn"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/sign_out"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>





</LinearLayout>