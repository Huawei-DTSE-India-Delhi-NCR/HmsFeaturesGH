<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp">

    <TextView
        android:layout_marginTop="25dp"
    android:id="@+id/findNearestHospitals"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Find Nearest Landmarks"
    android:fontFamily="sans-serif-condensed"
    android:textColor="@color/colorPrimaryDark"
    android:textStyle="bold"
    android:textSize="25sp"
    android:layout_gravity="center"
    android:gravity="center"/>


    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Your Latitude: "
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/yourLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/primary_text_color"
            android:textStyle="bold"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/longtitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Latitude: "
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/yourLongtitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/primary_text_color"
            android:textStyle="bold"
            android:textSize="15sp"
            />



    </LinearLayout>

<LinearLayout
android:layout_marginTop="25dp"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    android:background="@drawable/rect_dash_border"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <EditText
        android:id="@+id/queryString"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:hint="Enter place name"
        android:gravity="center"
        android:inputType="text"/>

<EditText
    android:id="@+id/distanceID"
    android:layout_width="match_parent"
    android:layout_weight="4"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:hint="Enter your distance in KMs(Max 50)"
    android:gravity="center"
    android:inputType="number"/>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/searchHospitalImage"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:layout_width="180dp"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:text="Fetch Details"
    android:clickable="true"
    android:background="@color/colorPrimary"
    android:textColor="@color/white"
    android:gravity="center"
    android:textStyle="bold"
    android:layout_marginTop="15dp"
   />

</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hospital_deails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Show on Map"
        android:layout_margin="30dp"
        android:gravity="center"
        android:visibility="gone"
        />
    </LinearLayout>