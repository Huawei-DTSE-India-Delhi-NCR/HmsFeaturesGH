<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/basic_map"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Basic Map"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/interact_map"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Gestures Map"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basic_map"
        android:onClick="interactive"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/route_map"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Route Map"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:letterSpacing="0.1"
        android:background="@drawable/custom_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/interact_map"
        android:visibility="gone"/>





</androidx.constraintlayout.widget.ConstraintLayout>